<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/dismiss_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dismissButton"
        android:layout_alignBottom="@+id/dismissButton"
        android:layout_toLeftOf="@+id/dismissButton"
        android:layout_toStartOf="@+id/dismissButton"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter the decryption key" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:text="Given the public key (e,n) find the decryption key (d,n)" />

    <Button
        android:id="@+id/dismissButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="94dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:text="Enter"
        android:textAppearance="@android:style/TextAppearance.Medium" />
</RelativeLayout>